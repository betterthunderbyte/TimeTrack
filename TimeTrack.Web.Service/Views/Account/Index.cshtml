<div class="container" id="account_app">
    <div class="columns">
        <div class="column">
            <h1 class="title">Konto</h1>
        </div>
        <div class="column">
            <div class="columns">
                <div class="column">
                    <div class="field">
                        <label class="label">Vorname</label>
                        <div class="control">
                            <input v-model="givenName" class="input" type="text">
                        </div>
                    </div>
                </div>
                <div class="column">
                    <div class="field">
                        <label class="label">Nachname</label>
